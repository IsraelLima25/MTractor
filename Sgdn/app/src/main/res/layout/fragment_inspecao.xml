    <EditText
        android:id="@+id/txtAlturaMinimaDesgasteTrabalhado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Digite a altura da area de desgaste"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtLarguraMinimaDesgasteTrabalhado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Digite a largura da area de desgaste"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtCelularCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Digite o celular para notificações"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Digite o nome do cliente"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Digite a cidade do Cliente"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnRegistrarInspecao"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="@color/theme"
        android:text="Concluir"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>